<aside class="sidebar">
  <section class="pod">
    <span class="aside_section_title pod_heading">Navigation</span>
    <nav class="aside_navigation">
      <ul>
        {% for navItem in nav.navItems %}
          <li>
            <a href="{{ navItem.url }}">{{ navItem.title }}</a>
          </li>
        {% endfor %}
      </ul>
    </nav>
  </section>

  <section class="pod">
    <span class="aside_section_title pod_heading">Webmaser</span>
    <article>
      My name is ReduxFlakes, I am an open source Android app developer & web
      developer and <em>designer</em>.
    </article>
  </section>

  <section class="pod now_playing">
    <div class="article">
<a id="music-link" href="#" target="_blank">
      <em><span id="playing-status"></span></em>
      <section id="metadata">
        <img id="album-cover" src="" alt="Album cover art">
        <article>
          <p><span id="music-title"></span></p>
          <p>by <span id="artist-name"></span></p>
          <p>from <span id="album-name"></span></p>
        </article>
      </section>
    </a>
    </div>
  </section>

  <section class="pod">
    <span class="aside_section_title pod_heading">Website Buttons</span>
    <article>
      <em>soon</em>
      <div id="status">Loading...</div>
    </article>
  </section>
</aside>