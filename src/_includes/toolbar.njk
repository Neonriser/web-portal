<script>
        var d = new Date();
        var days = [
                "Sunday",
                "Monday",
                "Tuesday",
                "Wednesday",
                "Thursday",
                "Friday",
                "Saturday"
        ];
        var months = [
                "Jan",
                "Feb",
                "Mar",
                "Apr",
                "May",
                "Jun",
                "Jul",
                "Aug",
                "Sep",
                "Oct",
                "Nov",
                "Dec"
        ];
        var day = days[d.getDay()];
        var date = d.getDate();
        var month = months[d.getMonth()];
        var year = d.getFullYear();
        var formattedDate = day + ", " + date + " " + month + ", " + year;
</script>
<div class="accent--container top--toolbar">
        <p>Today is <span id="currentDate"></span>.</p>
        <script>
                document
                        .getElementById("currentDate")
                        .innerHTML = formattedDate;
        </script>
