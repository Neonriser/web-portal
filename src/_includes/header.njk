<header>
  <article>
    <h1>{{ site.title }}
      <em class="heading__small">beta</em>
    </h1>
    <p>{{ site.description }}</p>
  </article>
  <div class="search">
    <form>
      <label>Search with DuckDuckGo!</label>
      <input type="text" id="searchInput">
      <button type="submit" onclick="searchValue()">Search</button>
    </form>
  </div>
  <script>
    function searchValue() {
      const searchInput = document
        .getElementById("searchInput")
        .value;
      window.open(`https://duckduckgo.com/?q=${searchInput}`, "_blank");
    }
  </script>

</header>