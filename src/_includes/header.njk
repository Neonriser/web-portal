<header>
  <h1>{{ site.title }}</h1>
  <p>{{ site.description }}</p>
</header>
<nav class="main--nav">
  <ul role="list">
    {% for navItem in nav.navItems %}
      <li>
        <a href="{{ navItem.url }}" {% if page.url == navItem.url %}aria-current="page"{% endif %}>{{ navItem.title }}</a>
      </li>
    {% endfor %}
  </ul>
</nav>