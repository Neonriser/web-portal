{% extends "./base.njk" %}

{% block content %}
    <section class="page--content">
        {% if banner %}
            <img src="/assets/images/banners/{{banner}}.png" alt="{{title}} Banner" class="banner">
        {% endif %}
        <h1 {% if date %}style="margin-bottom:0;"{% endif %}>{{title}}</h1>
        {% if date %}
            <div class="post--meta">
                <span>Written by: {{author}} - Posted on: {{date | PostDate}}</span>
            </div>
        {% endif %}
        {{ content | safe }}
        {% if update %}
            <span>Updated in: {{update}}</span>
        {% endif %}
    </section>
{% endblock %}